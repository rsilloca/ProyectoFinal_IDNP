<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProyectoFinal_IDNP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- CUSTOM STYLES -->

    <!-- BACKGROUND STYLES -->

    <style name="bg_fragment">
        <item name="android:background">@color/black</item>
    </style>

    <style name="bg_rounded">
        <item name="android:background">@drawable/bg_rounded_top_dark</item>
    </style>

    <!-- INPUT STYLES -->

    <style name="ubicunate_outline_primary_input">
        <item name="android:background">@drawable/bg_outline_primary_dark</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- BUTTON STYLES -->

    <style name="ubicunate_stroked_primary_button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">20dp</item>
        <item name="fontFamily">@font/nunito_extra_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- END CUSTOM STYLES -->

</resources>